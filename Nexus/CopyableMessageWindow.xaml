<Window x:Class="Nexus.CopyableMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nexus"
        mc:Ignorable="d"
        Title="CopyableMessageWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <DockPanel Margin="16">
        <Button x:Name="CloseButton" DockPanel.Dock="Bottom" Margin="0,16,0,0" Padding="16,4" HorizontalAlignment="Right" Content="Close" Click="CloseButton_Click"/>
        <TextBox x:Name="MessageTextBox" IsReadOnly="True"/>
    </DockPanel>
</Window>
